<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
		  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">  
	<id>frt-service-package</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}/..</directory>
			<outputDirectory></outputDirectory>            
			<includes>
				<include>env.bat</include>
			</includes>
		</fileSet>  	
		<fileSet>
			<directory>${project.basedir}/../frt-common/target</directory>
			<outputDirectory>lib</outputDirectory>            
			<includes>
				<include>frt-common-*.jar</include>
			</includes>
		</fileSet>        
		<!-- package datalake -->
		<fileSet>
			<directory>${project.basedir}/../frt-datalake/target</directory>
			<outputDirectory>lib</outputDirectory>            
			<includes>
				<include>frt-datalake-*.jar</include>
			</includes>
		</fileSet>     
		<fileSet>
			<directory>${project.basedir}/../frt-datalake/scripts</directory>
			<outputDirectory>datalake</outputDirectory>            
			<includes>
				<include>*.*</include>
			</includes>
		</fileSet>     		
		<!-- package stream -->
		<fileSet>
			<directory>${project.basedir}/../frt-stream/target</directory>
			<outputDirectory>lib</outputDirectory>            
			<includes>
				<include>frt-stream-*.jar</include>
			</includes>
		</fileSet>        
		<fileSet>
			<directory>${project.basedir}/../frt-stream/scripts</directory>
			<outputDirectory>stream</outputDirectory>            
			<includes>
				<include>*.*</include>
			</includes>
		</fileSet>    
		<!-- package fhir rest api doc app -->
		<fileSet>
			<directory>${project.basedir}/../frt-fhir/fhir-doc/target</directory>
			<outputDirectory>app</outputDirectory>            
			<includes>
				<include>frt-fhir-doc*.war</include>
			</includes>
		</fileSet>  
		<!-- package fhir rest api app -->		
		<fileSet>
			<directory>${project.basedir}/../frt-fhir/fhir-rest/target</directory>
			<outputDirectory>app</outputDirectory>            
			<includes>
				<include>frt-fhir-rest*.war</include>
			</includes>
		</fileSet>
		<!-- package schema -->
		<fileSet>
			<directory>${project.basedir}/../frt-schema/sp</directory>
			<outputDirectory>schema/sp</outputDirectory>            
			<includes>
				<include>create_patient_tables.sql</include>
				<include>drop_patient_tables.sql</include>
				<include>create_schema.sql</include>
				<include>drop_schema.sql</include>
				<include>README.txt</include>				
			</includes>
		</fileSet>        						
		<fileSet>
			<directory>${project.basedir}/../frt-schema/derby</directory>
			<outputDirectory>schema/derby</outputDirectory>            
			<includes>
				<include>create_patient_tables.sql</include>
				<include>drop_patient_tables.sql</include>
				<include>create_schema.sql</include>
				<include>drop_schema.sql</include>
				<include>README.txt</include>				
				<include>*.bat</include>								
			</includes>
		</fileSet>        						
		<fileSet>
			<directory>${project.basedir}/../frt-script</directory>
			<outputDirectory>bin</outputDirectory>            
			<includes>
				<include>*.*</include>
			</includes>
		</fileSet> 
		<!-- package fhir loader + synthea synthetic patient generator -->
		<fileSet>
			<directory>${project.basedir}/../frt-fhir/fhir-rest/target/frt-fhir-rest/WEB-INF/lib</directory>
			<outputDirectory>lib/loader</outputDirectory>            
			<includes>
				<include>commons-lang3-*.jar</include>
				<include>hapi-fhir-*.jar</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/../frt-fhir/fhir-rest/target/frt-fhir-rest/WEB-INF/lib</directory>
			<outputDirectory>lib/loader/db</outputDirectory>            
			<includes>
				<include>db-client-*.jar</include>
				<include>derbyclient-*.jar</include>
				<include>org.eclipse.persistence.*.jar</include>
				<include>spring-core-*.jar</include>
				<include>spring-context-*.jar</include>
				<include>spring-beans-*.jar</include>
				<include>spring-orm-*.jar</include>
				<include>spring-tx-*.jar</include>
				<include>spring-aop-*.jar</include>
				<include>spring-expression-*.jar</include>
				<include>spring-jdbc-*.jar</include>
				<include>spring-data-commons-*.jar</include>
				<include>jakarta.persistence-*.jar</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/../frt-fhir/fhir-rest/target/frt-fhir-rest/WEB-INF/lib</directory>
			<outputDirectory>lib/loader/web</outputDirectory>            
			<includes>
				<include>hk2-locator-*.jar</include>
				<include>hk2-utils-*.jar</include>
				<include>hk2-api-*.jar</include>
				<include>jersey-client-*.jar</include>
				<include>jersey-common-*.jar</include>
				<include>jersey-hk2-2.27.jar</include>
				<include>javax.annotation-api-1.3.2.jar</include>
				<include>javax.inject-2.5.0-b42.jar</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/../frt-fhir/fhir-load/target</directory>
			<outputDirectory>lib</outputDirectory>            
			<includes>
				<include>frt-fhir-load*.jar</include>
			</includes>
		</fileSet>        
		<fileSet>
			<directory>${project.basedir}/../frt-fhir/fhir-load/scripts</directory>
			<outputDirectory>load</outputDirectory>            
			<includes>
				<include>*.*</include>
			</includes>
		</fileSet>        	
		<fileSet>
			<directory>${project.basedir}/../frt-fhir/fhir-load</directory>
			<outputDirectory>load</outputDirectory>            
			<includes>
				<include>README.*</include>
			</includes>
		</fileSet>   
		<fileSet>
			<directory>${project.basedir}/../frt-fhir/fhir-load/synthea/bin</directory>
			<outputDirectory>load/synthea/bin</outputDirectory>            
			<includes>
				<include>*.*</include>
			</includes>
		</fileSet>   		
		<fileSet>
			<directory>${project.basedir}/../frt-fhir/fhir-load/synthea/lib</directory>
			<outputDirectory>load/synthea/lib</outputDirectory>            
			<includes>
				<include>*.*</include>
			</includes>
		</fileSet>   		
		<fileSet>
			<directory>${project.basedir}/../frt-fhir/fhir-load/data</directory>
			<outputDirectory>load/data</outputDirectory>            
			<includes>
				<include>*.*</include>
			</includes>
		</fileSet>   		
		<fileSet>
			<directory>${project.basedir}/../frt-service/target</directory>
			<outputDirectory>lib</outputDirectory>            
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>        		
		<fileSet>
			<directory>${project.basedir}/../frt-fhir/fhir-service/target</directory>
			<outputDirectory>lib</outputDirectory>            
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>        		
	</fileSets>
	<dependencySets>	
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<scope>runtime</scope>
			<excludes>
				<exclude>com.sun.jersey:jersey-core:jar:1.9</exclude>
				<exclude>com.sun.jersey:jersey-server:jar:1.9</exclude>
				<exclude>com.sun.jersey:jersey-json:jar:1.9</exclude>
			</excludes>
   		</dependencySet>
		<dependencySet>
			<outputDirectory>lib/jersey1.9</outputDirectory>
			<scope>runtime</scope>
			<includes>
				<include>com.sun.jersey:jersey-core:jar:1.9</include>
				<include>com.sun.jersey:jersey-server:jar:1.9</include>
				<include>com.sun.jersey:jersey-json:jar:1.9</include>
			</includes>
   		</dependencySet>
	</dependencySets>  
</assembly>
